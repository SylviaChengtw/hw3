#設定目錄位置
setwd("C:/Users/ASUS/Desktop/R Studio/HW_3 data/2000")
getwd()
#列出路徑中的txt檔案，並為這些檔案創一個list，命名為list.filenames
list.filenames <- list.files(pattern=".txt$",full.names = TRUE)
list.filenames
#創一個空的list接收檔案
list.data <- list()
#設立for 迴圈以讀取資料
for (i in 1:length(list.filenames)){
   list.data[[i]] <- read.table(list.filenames[i], header = TRUE, sep=" ", fill=TRUE)
}
list.filenames[list.filenames$"*" <- NULL]
names(list.data) <- list.filenames
list.data[2]
